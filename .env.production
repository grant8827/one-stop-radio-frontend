# Production Environment Variables - Railway Deployment
# Frontend URL: https://one-stop-radio-frontend-production.up.railway.app

# OneStopRadio Frontend Configuration - PRODUCTION (Railway)
# This file is used when NODE_ENV=production (Railway deployment)

# Production Railway Backend URLs - Update these with your actual Railway service URLs
REACT_APP_API_BASE_URL=https://backend-fast-py-production.up.railway.app
REACT_APP_SIGNALING_URL=https://backend-nd-production.up.railway.app  
REACT_APP_MEDIA_SERVER_URL=https://backend-cpp-production.up.railway.app

# Production Settings
REACT_APP_ENVIRONMENT=production
REACT_APP_DEBUG=false
REACT_APP_VERSION=1.0.0
NODE_ENV=production

# WebSocket Configuration - Production Railway URLs
REACT_APP_WS_URL=wss://backend-nd-production.up.railway.app
REACT_APP_MEDIA_WS_URL=wss://backend-cpp-production.up.railway.app

# Backend Connection Configuration
REACT_APP_BACKEND_TIMEOUT=10000
REACT_APP_RETRY_ATTEMPTS=3

# Feature Flags
REACT_APP_ENABLE_VIDEO_STREAMING=true
REACT_APP_ENABLE_WEBRTC=true
REACT_APP_ENABLE_SOCIAL_MEDIA=true

# Audio/Streaming Configuration
REACT_APP_MAX_UPLOAD_SIZE=52428800
REACT_APP_SUPPORTED_FORMATS=mp3,wav,ogg,m4a,flac

# Logging Configuration
REACT_APP_LOG_LEVEL=warn

# Build Optimization
GENERATE_SOURCEMAP=false